<asp:Content ID="Content1" ContentPlaceHolderID="ContentPlaceHolderText" Runat="Server">
      <p class="name">FAQ (ЧаВо).</p>
      <div align="justify">
        <p align="center"><font face="Times New Roman, Times, serif" size="3">FAQ 
